{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Discovery Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/discovery/main.go",
            "cwd": "${workspaceFolder}/cmd/discovery",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                // "--insecure"
            ]
        },
        {
            "name": "Launch VPN Client Node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/vpn-share-tool/main.go",
            "cwd": "${workspaceFolder}/cmd/vpn-share-tool",
        },
        {
            "name": "Launch Test Site (Port 8888)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/demo_site/main.go",
            "cwd": "${workspaceFolder}/demo_site"
        },
        {
            "name": "Build demo site",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/dev/",
            "args": [
                "build",
                "demo_site"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Run All Local Debug",
            "configurations": [
                "Launch Discovery Server",
                "Launch Test Site (Port 8888)",
                "Launch VPN Client Node"
            ],
            "stopAll": true
        }
    ]
}