{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Discovery Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/discovery-server",
            "cwd": "${workspaceFolder}/discovery-server",
            "env": {
                "BASIC_AUTH_USER": "admin",
                "BASIC_AUTH_PASS": "password"
            }
        },
        {
            "name": "Launch VPN Client Node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "--proxy-url",
                ""
            ]
        },
        {
            "name": "Launch Test Site (Port 8888)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/test_project/main.go",
            "cwd": "${workspaceFolder}/test_project"
        }
    ],
    "compounds": [
        {
            "name": "Run All Local Debug",
            "configurations": [
                "Launch Discovery Server",
                "Launch Test Site (Port 8888)",
                "Launch VPN Client Node"
            ],
            "stopAll": true
        }
    ]
}